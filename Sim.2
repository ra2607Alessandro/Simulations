import numpy as np
import matplotlib.pyplot as plt

# Constants
hbar = 1.054571817e-34  # Reduced Planck constant (J·s)
c = 299792458           # Speed of light (m/s)
pi = np.pi

# Casimir force function between two ideal plates
def casimir_force(A, d):
    return - (pi**2 * hbar * c) / (240 * d**4) * A

# Simulation: Area = 1 cm², Distance range = 0.5 to 10 micrometers
A = 1e-4  # 1 cm²
d_values = np.linspace(0.5e-6, 10e-6, 200)
forces = [casimir_force(A, d) for d in d_values]

# Plotting
plt.figure(figsize=(8, 5))
plt.plot(d_values * 1e6, np.abs(forces), label="|F|")
plt.xlabel("Plate Distance (μm)")
plt.ylabel("Casimir Force Magnitude (N)")
plt.title("Casimir Force vs Plate Distance")
plt.grid(True)
plt.legend()
plt.show()
